{
    "python.pythonPath": "/home/sever42rus/Django/transfer/venv/bin/python",
    "editor.formatOnSave": true,
    "python.formatting.provider": "autopep8",
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.fixAll": true
        }
